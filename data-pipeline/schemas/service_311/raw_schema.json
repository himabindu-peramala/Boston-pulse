{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "311 Service Requests Raw Data Schema",
  "description": "Schema for raw 311 service request data from Analyze Boston API",
  "type": "object",
  "properties": {
    "case_id": {
      "type": "string",
      "description": "Unique identifier for each 311 case",
      "primary_key": true
    },
    "open_date": {
      "type": ["string", "null"],
      "description": "Date and time when case was opened",
      "format": "date-time",
      "watermark_field": true
    },
    "case_topic": {
      "type": ["string", "null"],
      "description": "Topic or category of the case"
    },
    "service_name": {
      "type": ["string", "null"],
      "description": "Specific service requested"
    },
    "assigned_department": {
      "type": ["string", "null"],
      "description": "Department assigned to the case"
    },
    "case_status": {
      "type": ["string", "null"],
      "description": "Current status of the case"
    },
    "neighborhood": {
      "type": ["string", "null"],
      "description": "Neighborhood where service is requested"
    },
    "latitude": {
      "type": ["number", "string", "null"],
      "description": "Latitude coordinate"
    },
    "longitude": {
      "type": ["number", "string", "null"],
      "description": "Longitude coordinate"
    }
  },
  "required": ["case_id"],
  "additionalProperties": true,
  "metadata": {
    "dataset": "311",
    "stage": "raw",
    "source": "Analyze Boston API",
    "resource_id": "254adca6-64ab-4c5c-9fc0-a6da622be185",
    "version": "1.0.0"
  }
}
