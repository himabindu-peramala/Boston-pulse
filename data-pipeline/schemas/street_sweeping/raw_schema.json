{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Boston Street Sweeping Raw Data Schema",
  "description": "Schema for raw street sweeping schedule data from Analyze Boston API",
  "type": "object",
  "properties": {
    "_id": {
      "type": ["integer", "string", "null"],
      "description": "Unique identifier",
      "primary_key": true
    },
    "sam_street_id": {
      "type": ["string", "null"],
      "description": "Street segment identifier from SAM system"
    },
    "full_street_name": {
      "type": ["string", "null"],
      "description": "Full name of the street"
    },
    "from_street": {
      "type": ["string", "null"],
      "description": "Start cross street"
    },
    "to_street": {
      "type": ["string", "null"],
      "description": "End cross street"
    },
    "district": {
      "type": ["string", "null"],
      "description": "City district code"
    },
    "side_of_street": {
      "type": ["string", "null"],
      "description": "Side of street (Left/Right)"
    },
    "season_start": {
      "type": ["string", "null"],
      "description": "Month sweeping season starts"
    },
    "season_end": {
      "type": ["string", "null"],
      "description": "Month sweeping season ends"
    },
    "week_type": {
      "type": ["string", "null"],
      "description": "Frequency of sweeping (Every Week, Bi-Weekly, etc.)"
    },
    "tow_zone": {
      "type": ["string", "null"],
      "description": "Whether tow zone is enforced (YES/NO)"
    },
    "lat": {
      "type": ["number", "string", "null"],
      "description": "Latitude coordinate"
    },
    "long": {
      "type": ["number", "string", "null"],
      "description": "Longitude coordinate"
    }
  },
  "required": ["_id"],
  "additionalProperties": true,
  "metadata": {
    "dataset": "street_sweeping",
    "stage": "raw",
    "source": "Analyze Boston API",
    "resource_id": "5b4b5c1b-2c77-46e4-b9d6-e1888f36dd7e",
    "version": "1.0.0"
  }
}